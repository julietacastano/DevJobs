<main class="contenedor">
    <form method="POST" class="default-form">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" name="nombre" placeholder="Tu nombre">
        </div>
        <div class="campo">
            <label>Email</label>
            <input type="email" name="email" placeholder="Tu email">
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Tu contraseña">
        </div>
        <div class="campo">
            <label>Repetir contraseña</label>
            <input type="password" name="repetirPassword" placeholder="Repite tu contraseña">
        </div>

        <div class="campo acciones">
            <a href="/auth/iniciar-sesion">Ya tenes cuenta? Inicia sesión</a>
        </div>

        <div class="campo">
            <input type="submit" value="Crear cuenta" class="btn btn-azul">
        </div>
    </form>
</main>