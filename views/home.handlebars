<main class="lista-vacantes">
    {{#if buscador}}
        <div class="buscador">
            <form action="/buscador" method="POST">
                <input type="text" name="q" class="buscar">
                <input type="submit" value="Buscar">
            </form>
        </div>
    {{/if}}
    <h2>Lista de vacantes</h2>
    {{#if vacantes.length}}
        {{#each vacantes}}
            <div class="vacante">
                <div class="caja">
                    <h3>{{empresa}}</h3>
                    <p class="puesto">{{titulo}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Ubicacion</p>
                    <p class="nombre">{{ubicacion}}</p>
                </div>
                <div class="caja">
                    <p class="etiqueta">Contrato</p>
                    <p class="nombre contrato">{{contrato}}</p>
                </div>
                <div class="caja centrar-vertical">
                    <a href="/vacantes/{{url}}" class="btn btn-verde">Mas info</a>
                </div>
            </div>
        {{/each}}
    {{else}}
        <p>No hay vacantes disponibles</p>
    {{/if}}
</main>